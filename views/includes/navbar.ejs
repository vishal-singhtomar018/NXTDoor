  <link rel="stylesheet" href="/css/style.css">
  <nav class="navbar bg-body-tertiary fixed-top border-bottom">
    <div class="container-fluid">

      <!-- Logo -->
      <a class="navbar-brand" href="/listings">
        <img src="/images/logo2.png" alt="" style="width: 40px; height: 40px; border-radius: 50%;">
      </a>

      <!-- Toggle button on right side -->
      <button id="menu-toggle" class="btn btn-dark ms-auto">
        <i class="fa-solid fa-bars"></i>
      </button>
    </div>
  </nav>

  <!-- Sidebar (slides from right) -->
  <div id="sidebar" class="sidebar">
    <div class="sidebar-header">
      <h5>NXTDoor</h5>
      <p>Choose your destination</p>
      <button id="close-btn" class="btn-close"></button>
    </div>

    <ul class="sidebar-menu">
      <li><a href="/listings" class="active"><i class="fa-solid fa-house"></i> Home</a></li>
      <li><a href="/listings/explore"><i class="fa-solid fa-compass"></i> Explore</a></li>
      <li><a href="/listings/new"><i class="fa-solid fa-folder-plus"></i> Add listings</a></li>
      <li><a href="/about"><i class="fa-solid fa-user"></i> About Me</a></li>
      <li><a href="/listings/Profile"><i class="fa-solid fa-circle-user"></i>user Account</a></li>
      <li><a href="/listings/MyListing"><i class="fa-solid fa-list"></i> MyListing</a></li>

      <% if (!currUser) { %>
        <li><a href="/signup"><i class="fa-solid fa-user-plus"></i> Signup</a></li>
        <li><a href="/login"><i class="fa-solid fa-right-to-bracket"></i> Login</a></li>
        <% } %>
          <% if (currUser) { %>
            <li><a href="/logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a></li>
            <% } %>
    </ul>

    <!-- Search -->
    <form class="search-form" method="post" action="/submit">
      <input type="text" placeholder="Search destinations" name="title" required>
      <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>

    <!-- Google Translate -->
    <div class="mt-3" id="google_translate_element"></div>
    <script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    <script src="/GlobalGateway/public/js/script.js"></script>
    <script>
        const toggleBtn = document.getElementById("menu-toggle");
        const sidebar = document.getElementById("sidebar");
        const closeBtn = document.getElementById("close-btn");

    toggleBtn.addEventListener("click", () => {
          sidebar.classList.toggle("active");
    });

    closeBtn.addEventListener("click", () => {
          sidebar.classList.remove("active");
    });
    </script>
  </div>