<% layout('/layouts/boilerplate') %>

<div class="loginbox">
  <section class="min-vh-100 d-flex align-items-center" style="background-color: #c18b97;">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="card shadow-lg" style="border-radius: 1rem;">
            <div class="row g-0">
              
              <!-- Image Column -->
              <div class="col-md-6 d-none d-md-block">
                <img src="/images/wodden.jpg"
                     alt="login form"
                     class="img-fluid h-100 w-100"
                     style="object-fit: cover; border-radius: 1rem 0 0 1rem;" />
              </div>

              <!-- Form Column -->
              <div class="col-md-6 d-flex align-items-center">
                <div class="card-body p-4 p-md-5 text-black w-100">

                  <form action="/login" method="POST" novalidate class="needs-validation">
                    <div class="d-flex align-items-center mb-3">
                      <!-- <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                        -->
                      <img src="/images/logo2.png" alt="" style="width: 50px; height: 50px; border-radius: 50%;">&nbsp;&nbsp;
                      <span class="h1 fw-bold mb-0">NXTDoor</span>
                    </div>

                    <h5 class="fw-normal mb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                    <!-- Username -->
                    <div class="form-outline mb-4 col-12">
                      <label for="username" class="form-label"><b>Username</b></label>
                      <input type="text"
                             id="username"
                             name="username"
                             placeholder="Enter Username"
                             class="form-control"
                             required />
                    </div>

                    <!-- Password -->
                    <div class="form-outline mb-4">
                      <label for="password" class="form-label"><b>Password</b></label>
                      <input type="password"
                             id="password"
                             name="password"
                             placeholder="Enter Password"
                             class="form-control"
                             required 
                             autocomplete="off"/>
                    </div>

                    <!-- Login Button -->
                    <div class="pt-1 mb-4">
                      <button class="btn btn-dark btn-lg w-100" type="submit">Login</button>
                    </div>
                  </form>

                  <!-- Footer Links -->
                  <div class="text-center">
                    <a class="small text-muted d-block mb-2" href="/forgot">Forgot password?</a>
                    <p class="mb-2">Don't have an account? 
                      <a href="/signup" class="text-decoration-none" style="color: #393f81;">
                        Register here <i class="fa-solid fa-user-plus"></i>
                      </a>
                    </p>
                    <a href="#!" class="small text-muted me-2 text-decoration-none">Terms of use</a>
                    <a href="#!" class="small text-muted text-decoration-none">Privacy policy</a>
                  </div>

                </div>
              </div>
              <!-- End Form Column -->

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
